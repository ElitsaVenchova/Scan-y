git add <filename> 	       --Add one or more files to staging (index)
git add *		       --Add one or more files to staging (index)
git commit -m "Commit message" --Commit changes to head (but not yet to the remote repository)git config --global credential.helper storez
git push origin master 	       --Send changes to the master branch of your remote repository
git pull		       --Chechout changes
git reset --hard origin	       --Hard reset on conflicts
git checkout <filename>		--Invert file changes
git diff <filename>		--Compare local file with repository. Check local changes
